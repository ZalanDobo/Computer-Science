word='random'
alista=list()
listword=list(word)
wordno=len(word)
blanks='_ '*wordno
lives=7
position=0
print(blanks)

while lives>0 and '_' in blanks :
    letter=input('Guess a letter:')
    print('You have',lives, 'lives left')
    if letter in listword and listword!='':
        print('Your guess is right')
        position+=word.find(letter)
        print(position)
        blanks=blanks[0:position]+letter+blanks[position+1:]
        print(blanks)
        position=1
    else:
        lives-=1
        print('Wrong, you lost a try')
            
else:
    if lives==0:
        print("You've lost")
    else:
        print('You won') 
        
    
